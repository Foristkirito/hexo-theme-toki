.post {
  margin: 1em auto;
  padding: 1.5em 2em;
  background-color: #fff;
  border: 1px solid #ddd;
  box-shadow: 0 0 2px #ddd;
}
.posts  {
  .post:first-child {
    margin-top: 0;
  }
  .post-title {
    font-size: 1.5em

    .post-title-link {
      color: #368CCB;
      text-decoration: none;
    }
  }
  .post-content {
    color: #aaa
    a {
      color: #368CCB;
      text-decoration: none;
    }
  }
  .post-meta {
    color: #BABABA;
  }
}