.post{
  margin-bottom: 2em
  & > * {
    margin: 0
    padding: 0
    display: flex
    justify-content: center
  }
  .title{
    &:hover{
      color: red-color
    }
    text-align: center;
    font-size: 1.2em  
    text-decoration: none
    color: light-color
    font-weight:600
    margin-bottom: 1em
  }
  .meta{
    margin-bottom: 1em
    & > *{
      margin: 0
      padding: 0  
      font-size: .7em
      color:light-color
      margin-right: .5em
    }
    .date{

    }
    .category-list{

      .category-list-item{
        display: inline-block
        margin-right: .3em
        .category-list-link{
                  &:hover{
      color: red-color
    }
          text-decoration: none
          color: light-color
        }
      } 
    }

    .tag-list{
      .tag-list-item{
        display: inline-block
        margin-right: .3em
        .tag-list-link{
                  &:hover{
      color: red-color
    }
          text-decoration: none
          color: light-color
        }
      } 
    }

  }
  .content{
    display:block 
    color: light-color
    font-size:.8em 
    a:link , a:active , a:visited{
      color: light-color
      padding: 0 .3em
    }
    a:hover{
      background-color: red-color
      opacity: .8
      color:#fff
    }
    p{
      text-indent: 2em
    }
  }
  .continue a{
        &:hover{
      color: red-color
    }
    border-bottom: 1px dotted #ccc
    text-decoration: none
    font-size:.7em
    color: light-color
  }

    .toc{
      justify-content: start 
      font-size: .9em
      color:light-color
      
      .toc{
        padding: 2em 5em
        margin-top: 2em
        border: solid 1px #eee
        margin-bottom: 2em
        .toc-item {
          
          .toc-link{
            color: light-color
            text-decoration: none
            border-bottom: 1px dotted #ccc
            padding: 0 .3em
            &:hover{
              opacity: .8
              background-color: red-color
              color:white  
            }
          }
        }
      }
    }
  }

.more{
  font-size: .7em
    display: flex;
  justify-content: space-between;
      overflow: hidden; 
    white-space: nowrap; 
    text-overflow: ellipsis
    width: 100%;
  & a{
    &:hover{
      color: red-color  
    }
    width: 100%
    display: flex
    text-decoration: none
    color: light-color
    border-bottom: 1px dotted #ccc
    overflow: hidden; 
    white-space: nowrap; 
    text-overflow: ellipsis
  }
  .prev , .next {
    width: 40%
    }
  .prev a {
    float: left
    display: block
    } 
    .next a {
    float: right
    display: block
    }
}

.gitment-editor-tab {
  border-width: 0 1px 0 0;
}
.bdsharebuttonbox{
    padding-top: 2em
  display: flex
  justify-content: center
  a{
    background-image: none!important
    text-decoration: none
    font-size: .8em!important
  }  
}