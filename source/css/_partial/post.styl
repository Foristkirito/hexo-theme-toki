.post{
  margin-bottom: 2em
  & > * {
    margin: 0
    padding: 0
    display: flex
    justify-content: center
  }
  .title{
    &:hover{
      color: red-color
    }
    text-align: center;
    font-size: 1.2em  
    text-decoration: none
    color: light-color
    font-weight:600
    margin-bottom: .3em
  }
  .meta{
    margin-bottom: 1em
    & > *{
      margin: 0
      padding: 0  
      font-size: .7em
      color:light-color
      margin-right: .5em
    }
    .date{
      white-space: nowrap
    }
    .category-list{
      white-space:nowrap
      .category-list-item{
        display: inline-block
        margin-right: .3em
        white-space:nowrap
        .category-list-link{
                  &:hover{
      color: red-color
    }
          text-decoration: none
          color: light-color
        }
      } 
    }

    .tag-list{
      white-space:nowrap
      .tag-list-item{
        white-space:nowrap
        display: inline-block
        margin-right: .3em
        .tag-list-link{
                  &:hover{
      color: red-color
    }
          text-decoration: none
          color: light-color
        }
      } 
    }

  }
  .content{
    display:block 
    color: light-color
    font-size:.8em 
    margin: 2em 0
    a:link , a:active , a:visited{
      color: light-color
      padding: 0 .3em
    }
    a:hover{
      background-color: red-color
      opacity: .8
      color:#fff
    }
    p{
      text-indent: 2em
    }
  }
  .continue a{
        &:hover{
      color: red-color
    }
    border-bottom: 1px dotted #ccc
    text-decoration: none
    font-size:.7em
    color: light-color
  }

    .toc{
      justify-content: start 
      font-size: .9em
      color:light-color
      
      .toc{
        padding: 2em 5em
        margin-top: 2em
        border: solid 1px #eee
        margin-bottom: 2em
        .toc-item {
          
          .toc-link{
            color: light-color
            text-decoration: none
            border-bottom: 1px dotted #ccc
            padding: 0 .3em
            &:hover{
              opacity: .8
              background-color: red-color
              color:white  
            }
          }
        }
      }
    }
  }

.more{
  font-size: .7em
    display: flex;
  justify-content: space-between;
      overflow: hidden; 
    white-space: nowrap; 
    text-overflow: ellipsis
    width: 100%;
  & a{
    &:hover{
      color: red-color  
    }
    width: 100%
    display: flex
    text-decoration: none
    color: light-color
    border-bottom: 1px dotted #ccc
    overflow: hidden; 
    white-space: nowrap; 
    text-overflow: ellipsis
  }
  .prev , .next {
    width: 40%
    }
  .prev a {
    float: left
    display: block
    } 
    .next a {
    float: right
    display: block
    }
}
p{
  img{
    display:block;
    position:relative;
    margin: 1em auto;
  }
}
.write{
margin-left: 0 !important
  }

.bdsharebuttonbox{
    padding-top: 2em
  display: flex
  justify-content: center
  a{
    background-image: none!important
    text-decoration: none
    font-size: .8em!important
  }  
}
.copy-right{
  overflow:hidden
  flex-direction:column
  display:flex  
  margin-top:3em!important
  padding: 1em
  font-size: .8em
  *{
    overflow: hidden
    word-break: break-all
    white-space:normal;
  }
  a:link,a:visited{
    color: #ff6363!important
    text-decoration: none
  }
}
.tip{
  margin-bottom:1em
  display: flex
  justify-content: center
  flex-direction: column
  button{
    align-self: center
    background-color: #ff6363;
    border: none;
    color: white;
    font-size: .8em
    padding: .4em .9em  
    border-radius: .3em
    font-weight: 400
    }
    button:active{ 
      opacity: .9
      -moz-box-shadow: 2px 2px 2px  #ddd; /* 老的 Firefox */
      box-shadow: 2px 2px 2px #ddd;
    }
    .tip-img{
      align-self: center
      width: 100%;
      align-items: center
      display: flex
      align-content: center
      justify-content: center
      display: none
    }
    ul{
      width: 60%
      margin: .5em 0 0 0 
      padding: .5em
      display: flex
      justify-content: space-between;
      // background-color: #f8f9f9
      li{
        list-style-type: none
        display: inline-block
        img{
          width: 100%
          height: 100%
          max-width: 6em
        }
      }
    }
}