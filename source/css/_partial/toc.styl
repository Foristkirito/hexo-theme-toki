    .toc{
      justify-content: start 
      font-size: .9em
      color:light-color
      .toc-list{
        padding: 2em 5em
        margin-top: 2em
        border: solid 1px #eee
        margin-bottom: 2em
        .toc-list-item {
          
          .toc-list-link{
            color: light-color
