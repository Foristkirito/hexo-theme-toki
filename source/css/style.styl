regular-color = #333
red-color =  #c30
light-color = #444
@font-face {
      font-family: "UnifrakturMaguntia";
      src: url("/font/UnifrakturMaguntia.ttf");
}
@font-face {
      font-family: "Coustard";
      src: url("/font/Coustard.ttf");
}

@font-face {
  font-family: 'Noto Serif';
  font-style: italic;
  font-weight: 700;
  src: local('Noto Serif Bold Italic'), local('NotoSerif-BoldItalic'), url(/font/Wreg0Be4tcFGM2t6VWytvKpkxQ1nyBMhaPnv_ZMXNdQ.woff2) format('woff2');
  unicode-range: U+1F00-1FFF;
}
html{
      height: 100%
}
img{
      max-width: 100%
}
::selection {
    background:regular-color;
    color:white
}
iframe{
      max-width: 100%
      display: flex
      align-self: center
}
blockquote{
      padding: 1em;
      border-left: 8px solid  #ff6363
      margin: .5em 0 !important
      background-color:   #f8f9f9 
      // color: white
}
.not-found{
      display:none
      text-align: center
      color: light-color      
}
#top{
      position: fixed 
      bottom: 1em
      right: 2em
      display: block
      text-decoration: none
      color: light-color
}
p{
    text-indent: 2em
}
::-moz-selection {
    background:regular-color; 
    color:white

}

::-webkit-selection {
    background:regular-color; 
    color:white
}
.intro{
      font-size: .8em      
}
body{
      margin:0
      height: 100%
      font-size:1.25rem;
      font-family: 'Noto Serif', 'Times New Roman', serif !important
      line-height: 1.5;
      padding:0 30%;
      display:flex;
      flex-flow: column;
      align-items: space-between;
}
main,.search-items{
      flex:1
}
@media screen and (max-width:1300px){
      body{
            padding: 0 10%
      }
      .post .title{
            font-size: 1em!important 
      }
      #comments{
            margin: 0 -5%;   
      }
      .gitment-editor-tab:not(.gitment-selected){
            display:none!important      
      }
      .post .toc .toc{
            padding: 1.8em!important      
      }
      #top{
            display: none
      }
      .tip ul{
            width: 80%!important      
      }
}
@import "_partial/header";
@import "_partial/post";
@import "_partial/archive";
@import "_partial/paginator";
@import "_partial/footer";
@import "_partial/comment";
@import "_partial/about";