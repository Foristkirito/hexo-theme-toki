<div id="comments"></div>

<script>
    var gitment = new Gitment({
    id: window.location.herf,
    owner: "<%= theme.Comment.Owner %>",
    repo: "<%= theme.Comment.Repo %>",
    oauth: {
      client_id:"<%= theme.Comment.Id %>",
      client_secret: "<%= theme.Comment.Secret %>",
    }
  })
  gitment.render('comments')
</script>